{
  "name": "job-aggregator",
  "version": "1.0.0",
  "description": "Job aggregator that scrapes from LinkedIn",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "render-build": "mkdir -p public && npm install puppeteer",
    "postinstall": "node -e \"try { require('puppeteer').launch({headless: 'new'}) } catch(e) { console.log('Puppeteer not installed, skipping.') }\"",
    "install-puppeteer": "node install.js --force-chromium"
  },
  "keywords": [
    "linkedin",
    "scraper",
    "jobs",
    "puppeteer",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "puppeteer": "^19.7.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.21"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
